{
    "name": "filament-packages/filament-permission",
    "description": "Filament Admin plugin based on spatie permissions",
    "keywords": [
        "laravel",
        "filament",
        "filament-packages",
        "spatie-permission"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Boldyrev",
            "email": "iboldurev@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "filament/filament": "^2.0",
        "spatie/laravel-permission": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "FilamentPackages\\FilamentPermission\\": "src"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "FilamentPackages\\FilamentPermission\\PermissionServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
